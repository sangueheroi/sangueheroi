<script type="text/javascript">
    $(document).ready(function () {

        // radiobutton campanha especifica
        $("#rbtCampanhaEspecifica").on("click", function () {
            $('#inputNomeReceptor').css('display', '');
            $('#inputTipoSanguineo').css('display', 'none');
            $('#spanTipoCampanha').text('Especifica');
            $('#tipoSanguineoP').css('display', 'none');
            $('#nomeReceptorP').css('display', '');
        });

        // radiobutton campanha geral
        $("#rbtCampanhaGeral").on("click", function () {
            $('#inputNomeReceptor').css('display', 'none');
            $('#inputTipoSanguineo').css('display', '');
            $('#spanTipoCampanha').text('Geral');
            $('#nomeReceptorP').css('display', 'none');
            $('#tipoSanguineoP').css('display', '');
        });

        // click botao proximo
        $('.btnNext').click(function () {
            var tab = $('.nav-tabs > .active').next('li').find('a').text();

            if (validaFormPorTab(tab)) {
                $('.nav-tabs > .active').next('li').find('a').trigger('click');
            }
        });

        // click botao anterior
        $('.btnPrevious').click(function () {
            $('.nav-tabs > .active').prev('li').find('a').trigger('click');
        });

        // Validacao dos dados da campanha
        function validaFormPorTab(tab) {
            var isValid = true;

            if (tab === 'Informações da Campanha') {
                return true;
            } else if (tab === 'Local da Campanha') {

                if ($('#NOME_CAMPANHA').val() === '') {
                    $('#inputNomeCampanha').addClass('has-error');
                    isValid = false;
                }

                if ($('#DESCRICAO_CAMPANHA').val() === '') {
                    $('#inputDescricaoCampanha').addClass('has-error');
                    isValid = false;
                }

                if ($('#rbtCampanhaGeral').attr("checked") === 'checked') {
                    if ($('#ddlTipoSanguineo').val() === '') {
                        $('#inputTipoSanguineo').addClass('has-error');
                        isValid = false;
                    }
                } else {
                    if ($('#NOME_RECEPTOR').val() === '') {
                        $('#inputNomeReceptor').addClass('has-error');
                        isValid = false;
                    }
                }

                if ($('#NOME_HOSPITAL').val() === '') {
                    $('#inputNomeHospital').addClass('has-error');
                    isValid = false;
                }
            } else if (tab === 'Finalizar Campanha') {

                if ($('#LOGRADOURO').val() === '') {
                    $('#inputLogradouro').addClass('has-error');
                    isValid = false;
                }

                if ($('#BAIRRO').val() === '') {
                    $('#inputBairro').addClass('has-error');
                    isValid = false;
                }

                if ($('#CIDADE').val() === '') {
                    $('#inputCidade').addClass('has-error');
                    isValid = false;
                }

                if ($('#ddlEstados').val() === '') {
                    $('#inputEstado').addClass('has-error');
                    isValid = false;
                }

                if ($('#CEP').val() === '') {
                    $('#inputCep').addClass('has-error');
                    isValid = false;
                }
            }

            return isValid;
        }

        // Atribuir valores para confirmação da campanha
        $('#NOME_CAMPANHA').keyup(function () {
            $('#spanNomeCampanha').text($(this).val());
            $('#inputNomeCampanha').removeClass('has-error');
        });

        $('#DESCRICAO_CAMPANHA').keyup(function () {
            $('#spanDescricaoCampanha').text($(this).val());
            $('#inputDescricaoCampanha').removeClass('has-error');
        });

        $('#ddlTipoSanguineo').change(function () {
            $('#spanTipoSanguineo').text($('#ddlTipoSanguineo :selected').text());
            $('#inputTipoSanguineo').removeClass('has-error');
        });

        $('#NOME_RECEPTOR').keyup(function () {
            $('#spanNomeReceptor').text($(this).val());
            $('#inputNomeReceptor').removeClass('has-error');
        });

        $('#NOME_HOSPITAL').keyup(function () {
            $('#spanNomeHospital').text($(this).val());
            $('#inputNomeHospital').removeClass('has-error');
        });

        $('#LOGRADOURO').keyup(function () {
            $('#spanLogradouro').text($(this).val());
            $('#inputLogradouro').removeClass('has-error');
        });

        $('#BAIRRO').keyup(function () {
            $('#spanBairro').text($(this).val());
            $('#inputBairro').removeClass('has-error');
        });

        $('#CIDADE').keyup(function () {
            $('#spanCidade').text($(this).val());
            $('#inputCidade').removeClass('has-error');
        });

        $('#ddlEstados').change(function () {
            $('#spanEstado').text($('#ddlEstados :selected').text());
            $('#inputEstado').removeClass('has-error');
        });

        $('#CEP').keyup(function () {
            $('#spanCEP').text($(this).val());
            $('#inputCep').removeClass('has-error');
        });

        // DatePicker das datas
        $("#DATA_INICIO_DT").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
            dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
            dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
            dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
            monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
            nextText: 'Próximo',
            prevText: 'Anterior',
            onClose: function () {
                validacaoData();
            }
        }).datepicker("setDate", new Date());

        $("#DATA_FIM_DT").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
            dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
            dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
            dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
            monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
            nextText: 'Próximo',
            prevText: 'Anterior',
            onClose: function () {
                validacaoData();
            }
        }).datepicker("setDate", new Date());

        // Funcao para Validar Data
        function validacaoData() {
            var dtIni = $("#DATA_INICIO_DT").val();
            var dtFim = $("#DATA_FIM_DT").val();

            if (dtIni > dtFim) {
                var d = new Date();

                $("#DATA_INICIO_DT").val(d.getDate() + "/" + (d.getMonth() + 1) + "/" + d.getFullYear());
                $("#DATA_FIM_DT").val(d.getDate() + "/" + (d.getMonth() + 1) + "/" + d.getFullYear());

                $.notify({
                    message: 'Atenção! Data Fim maior que Data Inicio',
                    status: "warning",
                    timeout: 2000
                });
            }
        }

        // Mascara Cep
        $('#CEP').mask('999-99-999');

        //Validar CEP quando o campo cep perde o foco.
        $("#CEP").blur(function () {

                //verifica se o estado foi selecionado

                if ($('#ddlEstados').val() !== '') {
                    //Nova variável "cep" somente com dígitos.
                    var cep = $(this).val().replace(/\D/g, '');

                    //Verifica se campo cep possui valor informado.
                    if (cep != "") {

                        //Expressão regular para validar o CEP.
                        var validacep = /^[0-9]{8}$/;

                        //Valida o formato do CEP.
                        if (validacep.test(cep)) {

                            //Consulta o webservice viacep.com.br/
                            $.getJSON("//viacep.com.br/ws/" + cep + "/json/?callback=?",
                                function (dados) {

                                    if (("erro" in dados)) {
                                        limpaCep();
                                        $.notify({
                                            message: "CEP não encontrado, favor digitar novamente.",
                                            status: "warning",
                                            timeout: 1000
                                        });
                                    } else if (dados.uf !== $('#ddlEstados').val()) {
                                        limpaCep();
                                        $.notify({
                                            message: "CEP não pertence ao estado selecionado!",
                                            status: "warning",
                                            timeout: 1000
                                        });
                                    } //end if.
                                });
                        } //end if.
                        else {
                            //cep é inválido.
                            limpaCep();
                            $.notify({
                                message: "Cep Inválido, digite novamente.",
                                status: "warning",
                                timeout: 1000
                            });
                        }
                    } //end if.
                    else {
                        //cep sem valor, limpa o campo cep.
                        limpaCep();
                    }
                } else {
                    limpaCep();
                    $.notify({
                        message: "Atençã! Informe primeiramente o estado.",
                        status: "warning",
                        timeout: 1000
                    });
                }


            });

        // Funcao para Limpar Cep
        function limpaCep() {
            // Limpa valores do formulário de cep.
            $("#CEP").val("");
        }

        //Valida Form Completo Submit
        function validaFormCompleto() {

            var isValid = true;

            if ($('#NOME_CAMPANHA').val() === '') {
                $('#inputNomeCampanha').addClass('has-error');
                isValid = false;
            }

            if ($('#DESCRICAO_CAMPANHA').val() === '') {
                $('#inputDescricaoCampanha').addClass('has-error');
                isValid = false;
            }

            if ($('#rbtCampanhaGeral').attr("checked") === 'checked') {
                if ($('#ddlTipoSanguineo').val() === '') {
                    $('#inputTipoSanguineo').addClass('has-error');
                    isValid = false;
                }
            } else {
                if ($('#NOME_RECEPTOR').val() === '') {
                    $('#inputNomeReceptor').addClass('has-error');
                    isValid = false;
                }
            }

            if ($('#NOME_HOSPITAL').val() === '') {
                $('#inputNomeHospital').addClass('has-error');
                isValid = false;
            }
            
            if ($('#LOGRADOURO').val() === '') {
                $('#inputLogradouro').addClass('has-error');
                isValid = false;
            }

            if ($('#BAIRRO').val() === '') {
                $('#inputBairro').addClass('has-error');
                isValid = false;
            }

            if ($('#CIDADE').val() === '') {
                $('#inputCidade').addClass('has-error');
                isValid = false;
            }

            if ($('#ddlEstados').val() === '') {
                $('#inputEstado').addClass('has-error');
                isValid = false;
            }

            if ($('#CEP').val() === '') {
                $('#inputCep').addClass('has-error');
                isValid = false;
            }

            return isValid;
        }
        //Submit
        $('form#formCadastrarCampanha').submit(function (e) {
            e.preventDefault();
            if (!validaFormCompleto()) {
                $.notify({
                    message: 'Atenção! Existem dados não preenchidos.',
                    status: "warning",
                    timeout: 2500
                });
                return;
            } else {
                //Objeto Model
                var ObjCampanha = {
                    CODIGO_CAMPANHA: 0,
                    NOME_USUARIO: "",
                    EMAIL_USUARIO: "",
                    NOME_CAMPANHA: "",
                    DESCRICAO_CAMPANHA: "",
                    NOME_RECEPTOR: "",
                    TIPO_SANGUINEO: "",
                    NOME_HOSPITAL: "",
                    LOGRADOURO: "",
                    BAIRRO: "",
                    CIDADE: "",
                    ESTADO: "",
                    CEP: "",
                    DATA_INICIO_DT: 0,
                    DATA_FIM_DT: 0
                };

                ObjCampanha["NOME_USUARIO"] = $('#NOME_USUARIO').val();
                ObjCampanha["EMAIL_USUARIO"] = $('#EMAIL_USUARIO').val();
                ObjCampanha["NOME_CAMPANHA"] = $('#NOME_CAMPANHA').val();
                ObjCampanha["DESCRICAO_CAMPANHA"] = $('#DESCRICAO_CAMPANHA').val();
                ObjCampanha["NOME_RECEPTOR"] = $('#NOME_RECEPTOR').val();
                ObjCampanha["TIPO_SANGUINEO"] = $('#ddlTipoSanguineo :selected').text();
                ObjCampanha["NOME_HOSPITAL"] = $('#NOME_HOSPITAL').val();
                ObjCampanha["LOGRADOURO"] = $('#LOGRADOURO').val();
                ObjCampanha["BAIRRO"] = $('#BAIRRO').val();
                ObjCampanha["CIDADE"] = $('#CIDADE').val();
                ObjCampanha["ESTADO"] = $('#ddlEstados :selected').text();
                ObjCampanha["CEP"] = $('#CEP').val();
                ObjCampanha["DATA_INICIO_DT"] = $('#DATA_INICIO_DT').val();
                ObjCampanha["DATA_FIM_DT"] = $('#DATA_FIM_DT').val();

                $.ajax({
                    type: 'POST',
                    url: './CriarCampanha',
                    contentType: 'application/json',
                    data: (JSON.stringify(ObjCampanha)),
                    dataType: 'json',
                    cache: false,
                    async: true,
                    success: function (data) {
                        if (data.isRedirect) {
                            $.notify({
                                message: data.msg,
                                status: "success",
                                timeout: 2500,
                                onClose: function () {
                                    window.location.href = data.url;
                                }
                            });
                        }
                        else
                            $.notify({
                                message: data.msg,
                                status: "info",
                                timeout: 2500
                            });
                    }
                });
                if (e.preventDefault) {
                    e.preventDefault();
                } else {
                    e.returnValue = false;
                }
            }
        });

    });
</script>
