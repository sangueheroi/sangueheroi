@model SangueHeroiWeb.Models.GrupoUsuarioModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Usuarios por Grupo</h4>
</div>
<div class="modal-body">

    <div class="row">
        <div class="container">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2" for="NOME_GRUPO" style="text-align: inherit;">Nome Grupo</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.NOME_GRUPO, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="NOME_GRUPO" style="text-align: inherit;">Descrição Grupo</label>
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.DESCRICAO_GRUPO, new { @class = "form-control", disabled = "disabled" } )
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover compact" id="gridUsuariosGrupo" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Código Usuario</th>
                            <th>Nome Usuario</th>
                            <th>E-mail Usuario</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

   
   
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Sair</button>
</div>

<script>

    $(document).ready(function () {

        var traducaogrid = {
            "sEmptyTable": "Nenhum registro encontrado",
            "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
            "sInfoFiltered": "(Filtrados de _MAX_ registros)",
            "sInfoPostFix": "",
            "sInfoThousands": ".",
            "sLengthMenu": "_MENU_ resultados por página",
            "sLoadingRecords": "Carregando...",
            "sProcessing": "Processando...",
            "sZeroRecords": "Nenhum registro encontrado",
            "sSearch": "Pesquisar",
            "oPaginate": {
                "sNext": "Próximo",
                "sPrevious": "Anterior",
                "sFirst": "Primeiro",
                "sLast": "Último"
            },
            "oAria": {
                "sSortAscending": ": Ordenar colunas de forma ascendente",
                "sSortDescending": ": Ordenar colunas de forma descendente"
            },

            "select": {
                "rows": ""
            }

        }

        $('#gridUsuariosGrupo').DataTable({
            ajax: {
                url: "GrupoUsuario/GetListUsuariosDoGrupo",
                dataSrc: "",
                data: { idGrupo : @Model.CODIGO_GRUPO }
            },
            filter: true,
            info: true,
            lengthChange: false,
            pageLength: 10,
            columns:
            [
                { data: 'CODIGO_USUARIO' },
                { data: 'NOME_USUARIO' },
                { data: 'EMAIL_USUARIO' }
            ],
            oLanguage: traducaogrid,
            order: [[0, "desc"]]

        });

    });


</script>