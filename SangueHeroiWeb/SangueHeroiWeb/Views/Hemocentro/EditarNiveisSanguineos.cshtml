@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<input type='hidden' id='msg' value='@ViewBag.Msg' />

<script type="text/javascript">
    $(document).ready(function () {
        $("input").blur(function () {
            var value = $(this).val();
            if (value > 100 || value < 0)
            {
                $(this).val(0);
                $(this).focus();
                $.notify({
                    message: "Valor incorreto",
                    status: "info",
                    timeout: 1000
                });
            }
        });

        var msg = $('#msg').val();
        if (msg != '') {
            $.notify({
                message: msg,
                status: "success",
                timeout: 1000
            });
        }
    });
</script>

