<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sangue Herói", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-file"></span> Relatórios<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","RankingDoadores")"><i class="fa fa-child" aria-hidden="true"></i> Ranking de Doadores</a></li>
                                <li><a href="@Url.Action("NiveisSanguineos","Relatorios")"><i class="fa fa-bar-chart" aria-hidden="true"></i> Nivel de Sangue Hemocentros</a></li>
                                <li><a href="@Url.Action("TiposSanguineos","Relatorios")"><i class="fa fa-line-chart" aria-hidden="true"></i> Tipos Sanguíneos por Usuario</a></li>
                                <li><a href="@Url.Action("Index","GrupoUsuario")"><i class="fa fa-users" aria-hidden="true"></i> Ranking de Grupo de Usuarios</a></li>
                                @*<li class="divider"></li>*@
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-tint"></span> Campanhas <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a class="campanhaIndex" href="@Url.Action("Index","Campanha")"><i class="glyphicon glyphicon-list-alt" aria-hidden="true"></i> Consultar Campanhas </a></li>
                                <li><a href="@Url.Action("CriarCampanha","Campanha")"><i class="glyphicon glyphicon-plus-sign" aria-hidden="true"></i> Incluir Campanha </a></li>
                                @*<li class="divider"></li>*@
                            </ul>
                        </li>
                    </ul>
                    <input type="hidden" value="@Session["CODIGO_HEMOCENTRO_PERFIL"]" id="CODIGO_HEMOCENTRO_PERFIL" />  
                                         
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown" id="liAdm">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Administrador <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","Administrador")"><span class="glyphicon glyphicon-pencil"></span> Validar Cadastro Hemocentro</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @Session["NOME_HEMOCENTRO"].ToString() <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Editar","Hemocentro")"><span class="glyphicon glyphicon-pencil"></span> Editar</a></li>
                                <li><a href="@Url.Action("Inativar","Hemocentro")"><span class="glyphicon glyphicon-ban-circle"></span> Desativar Conta</a></li>
                                <li><a href="@Url.Action("ConsultaNiveisSanguineos","Hemocentro")"><span class="glyphicon glyphicon-tint"></span> Nivel Banco de Sague </a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("LogOff","Login")"><span class="glyphicon glyphicon-log-out"></span> Logoff</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/controllers")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <div class="container body-content" style="position:relative;top:150px; height:100%">
        @RenderBody()
    </div>
        <div style="position:absolute; bottom:0; left:120px; width:82%">
            <footer>
                <div style="border-bottom:1px solid #e74c3c; margin-bottom:5px" width="100%">&nbsp;</div>
                <p>&copy; @DateTime.Now.Year - Sangue Herói</p>
            </footer>
        </div>
    


  
</body>
</html>


<style>
    .navbar-default {
        background-color: #e74c3c;
        border-color: #c0392b;
    }

        .navbar-default .navbar-brand {
            color: #eef1f2;
        }

            .navbar-default .navbar-brand:hover,
            .navbar-default .navbar-brand:focus {
                color: #ffbbbc;
            }

        .navbar-default .navbar-text {
            color: #eef1f2;
        }

        .navbar-default .navbar-nav > li > a {
            color: #eef1f2;
        }

            .navbar-default .navbar-nav > li > a:hover,
            .navbar-default .navbar-nav > li > a:focus {
                color: #ffbbbc;
            }

        .navbar-default .navbar-nav > li > .dropdown-menu {
            background-color: #e74c3c;
        }

            .navbar-default .navbar-nav > li > .dropdown-menu > li > a {
                color: #eef1f2;
            }

                .navbar-default .navbar-nav > li > .dropdown-menu > li > a:hover,
                .navbar-default .navbar-nav > li > .dropdown-menu > li > a:focus {
                    color: #ffbbbc;
                    background-color: #c0392b;
                }

            .navbar-default .navbar-nav > li > .dropdown-menu > li > .divider {
                background-color: #e74c3c;
            }

        .navbar-default .navbar-nav .open .dropdown-menu > .active > a,
        .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
        .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
            color: #ffbbbc;
            background-color: #c0392b;
        }

        .navbar-default .navbar-nav > .active > a,
        .navbar-default .navbar-nav > .active > a:hover,
        .navbar-default .navbar-nav > .active > a:focus {
            color: #ffbbbc;
            background-color: #c0392b;
        }

        .navbar-default .navbar-nav > .open > a,
        .navbar-default .navbar-nav > .open > a:hover,
        .navbar-default .navbar-nav > .open > a:focus {
            color: #ffbbbc;
            background-color: #c0392b;
        }

        .navbar-default .navbar-toggle {
            border-color: #c0392b;
        }

            .navbar-default .navbar-toggle:hover,
            .navbar-default .navbar-toggle:focus {
                background-color: #c0392b;
            }

            .navbar-default .navbar-toggle .icon-bar {
                background-color: #eef1f2;
            }

        .navbar-default .navbar-collapse,
        .navbar-default .navbar-form {
            border-color: #eef1f2;
        }

        .navbar-default .navbar-link {
            color: #eef1f2;
        }

            .navbar-default .navbar-link:hover {
                color: #ffbbbc;
            }

    @@media (max-width: 767px) {
        .navbar-default .navbar-nav .open .dropdown-menu > li > a {
            color: #eef1f2;
        }

            .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
            .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
                color: #ffbbbc;
            }

        .navbar-default .navbar-nav .open .dropdown-menu > .active > a,
        .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
        .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
            color: #ffbbbc;
            background-color: #c0392b;
        }
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        if ($('#CODIGO_HEMOCENTRO_PERFIL').val() == 2)
        {
            $('#liAdm').hide();
        }

        if($('#CODIGO_HEMOCENTRO_PERFIL').val() == null)
        {
            window.location.href = "Login/Index";
        }
    });
</script>
